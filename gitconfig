[user]
	name = Shan Wang
	email = uniwangshan@gmail.com
	
[github]
	user = wangshan
	
[credential]
	helper = osxkeychain
	
[color]
	branch = true
	status = true
	diff = true
	interactive = true
	
[alias]
	diffword = diff --word-diff
	dfc = diff --cached
	logtree = log --graph --oneline --decorate --all
	logpretty = log --pretty=format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative --graph
	recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
    	leaders = shortlog -sn
    	overview = log --pretty=format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative --no-merges --since='3 months'
    	recap = git log --all --oneline --no-merges --author="uniwangshan@gmail.com"
	rebasemaster = git pull upstream master --rebase
	deletemerged = git branch --merged | grep -v "(^\*|master)" | xargs git branch -d
	patch = git add -p
	
[difftool]
	prompt = false
	tool = vimdiff

[push]
	default = simple
    
[core]
	pager = less -x1,5
    	editor = '/Applications/MacVim.app/Contents/MacOS/Vim'
